<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/currentFoodLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_margin="30dp"
        android:orientation="vertical"
        android:background="@drawable/current_food">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="식재료 현황"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:gravity="center"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sex"
            android:textSize="30dp"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sex"
            android:textSize="30dp"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sex"
            android:textSize="30dp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/todayScheduleLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/currentFoodLayout"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_margin="30dp"
        android:orientation="vertical"
        android:background="@drawable/current_food">
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="오늘의 일정"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:gravity="center"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sex"
            android:textSize="30dp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/todayScheduleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="30dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/home_icon"></ImageView>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/home_icon"
            android:layout_weight="1"></ImageView>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/home_icon"></ImageView>
    </LinearLayout>


    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#345e86"
        app:itemIconTint="#ffffff"
        app:itemTextColor="#f6d170"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_menu"></com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>